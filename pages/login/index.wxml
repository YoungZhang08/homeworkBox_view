<!--index.wxml-->
<view class="container">
  <view wx:if="{{hasUserInfo}}" class='signin'>

    <view class="userinfo-avatar">
      <image bindtap="bindViewTap" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    </view>

    <view class="userinfo-nickname">{{userInfo.nickName}}</view>

    <view class="login">
      <button bindtap="jump_boxes">进入小程序</button>
    </view>

  </view>

  <view wx:if="{{!hasUserInfo && canIUse}}" class='signup'>
    <button open-type="getUserInfo" bindgetuserinfo="getUserInfo">使用微信授权登录</button>
  </view>
</view>