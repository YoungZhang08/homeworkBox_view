page{
  height: 100%;
}
.join-box {
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box-info {
  width: 600rpx;
  height: 192rpx;
}
.box-info text {
  display: block;
  margin-top: 30rpx;
  font-size: 32rpx;
}
.box-info input {
  margin-top: 30rpx;
  width: 100%;
  height: 60rpx;
  font-size: 20rpx;
  text-indent: 10rpx;
  background-color: white;
}
button {
  width: 600rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  background-color: #73bdf6;
  border-radius: 5rpx;
  color: white;
}