<!-- boxes.wxml -->
<view class="boxes">
  <view class="boxes-back">
    <image src="/images/home_back.png" />
  </view>

  <view class="boxes-tab">
    <view class="tab-left">
      <navigator open-type="switchTab" url="/boxesList/index">我创建的</navigator>
      <navigator open-type="switchTab" url="/boxesList/index">我加入的</navigator>
    </view>
    <view class="tab-right">
        <image bindtap='showPopup' src="/images/add.png" />
    </view>
    <popup class="popup"
      btn_create="创建盒子"
      btn_add="加入盒子"
      bind:create="createBox"
      bind:add="addBox"
    >
    </popup>
  </view>
</view>