/* pages/messages/index.wxss */
page {
  background-color: #eeeeee;
}
.message {
  height: 100%;
  background-color: #ffffff;
}
.message-list {
  height: 100rpx;
  border-bottom: 1px solid #eeeeee;
}
.list-info {
  display: flex;
  align-items: center;
  width: 650rpx;
  height: 100%;
  margin: 0 auto;
}
.list-img {
  width: 80rpx;
  height: 80rpx;
}
.list-img image {
  width: 100%;
  height: 100%;
}
.list-infobox text {
  margin-left: 50rpx;
  font-size: 30rpx;
  display: block;
}