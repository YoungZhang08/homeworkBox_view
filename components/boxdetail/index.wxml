<view class="hw-boxdetail">
  <view>{{isUsers}}</view>
  <block wx:if="{{isUsers}}">
    <view wx:for="{{list}}" wx:key="index" class="detail-content">
      <view class="left">
        <image src="/images/boxes.png" />
        <!-- <image src="{{item.portrait}}" /> -->
      </view>
      <view>
        <text>{{item.name}}</text>
      </view>
    </view>
  </block>
  <block wx:else>
    <view wx:for="{{list}}" wx:key="index" class="detail-content">
      <view class="left">
        <text>{{item.title}}</text>
      </view>
      <view class="right">
        <text>{{item.deadline}}</text>
      </view>
    </view>
  </block>
</view>
<slot />