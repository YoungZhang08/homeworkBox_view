<block class="hw-boxdetail" wx:for="{{list}}" wx:key="index">
  <view class="detail-content" wx:if="{{!isUsers && isHomework}}" bindtap='gotoHomework' data-boxId="{{item.boxId}}" data-id="{{item.id}}">
    <view class="left">
      <text>{{item.title}}</text>
    </view>
    <view class="right">
      <text>{{item.deadline}}</text>
    </view>
  </view>
  <view class="detail-content" wx:elif="{{!isUsers && !isHomework}}" bindtap='gotoResources' data-boxId="{{item.boxId}}" data-id="{{item.id}}">
    <view class="left">
      <text>{{item.title}}</text>
    </view>
    <view class="right">
      <text>{{item.deadline}}</text>
    </view>
  </view>
  <view class="detail-content" wx:else>
    <view class="imgLeft">
      <image src="{{item.portrait}}" />
    </view>
    <view class='imgRight'>
      <text>{{item.name}}</text>
    </view>
  </view>
</block>
<slot />